  "version": "0.2.0",
  "configurations": [

{
  "name": "Launch Edge",
  "request": "launch",
  "type": "pwa-msedge",
  "url": "https://www.airdates.tv/",
  "webRoot": "${workspaceFolder}",
  "outputCapture": "console",
  "console": "internalConsole",
  "attach": "restart",
  "restart": true,
//  "trace": true,
  "sourceMap": false,
  "runtimeArgs": [
      "--auto-open-devtools-for-tabs"
  ],
  "env": {
    "XDEBUG_MODE": "debug,develop",
    "XDEBUG_CONFIG": "client_port=9000"
  }
},
  ]
}